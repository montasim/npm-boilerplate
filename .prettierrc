{
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "arrowParens": "always",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "tabWidth": 4,
    "useTabs": false,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "proseWrap": "preserve"
            }
        }
    ]
}
